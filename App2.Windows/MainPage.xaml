        </Grid.ColumnDefinitions>

        <Button Content="nut 1" HorizontalAlignment="Left" Margin="312,410,0,0" VerticalAlignment="Top" Click="Button_Click" Background="#B3DA3434" HorizontalContentAlignment="Stretch" FontFamily="Segoe UI Emoji" FontSize="11"/>
